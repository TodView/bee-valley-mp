.catTask {
    height: 85vh;
    width: 100%;
    background: gray;
    position: relative;
  }
  
  
  .showMessage {
    width: 100%;
    height: 5vh;
    font-weight: bold;
    display: flex;
    color: red;
    align-items: center;
    justify-content: center;
  }
  
  .showMessage .showBtn{
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  
  .showMessage .showBtn button{
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    padding: 0;
  }
  .showMessage .showBtn button:first-child{
    margin-right: 10rpx;
  }
  
  .doSomething {
    width: 100%;
    height: 10vh;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  
  .doSomething .btn {
    margin: 0 30rpx;
  }
  
  .doSomething .btn button {
    height: 7vh;
    line-height: 7vh;
  }
  
  .doSomething .timer {
    position: absolute;
    top: 3vh;
    right: 5vw;
    font-size: 3vh;
  }
  
  .doSomething .price {
    position: absolute;
    top: 3vh;
    left: 5vw;
    font-size: 3vh;
  }

  .showModel{
      width: 90vw;
      height: 500rpx;
      position: absolute;
      left: 5vw;
      top: 100rpx;
      background: #fff;
  }

  .showModel .showWrap{
      width: 90%;
      height: 60%;
      margin: 20rpx auto 0;
      padding-top: 30rpx;
  }

  .showModel .showWrap .tabs{
      height: 100rpx;
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .showModel .showWrap .tabs .picker{
      width: 350rpx;
      border: 1rpx solid gray;
      height: 70rpx;
      line-height: 70rpx;
      text-indent: 1em;
  }

  .showModel .foot{
      width: 100%;
      height: 30%;
      display: flex;
      justify-content: space-around;
      align-items: center;
  }

  .showModel .foot .button1{
      width: 30%;
      height: 90rpx;
      background: burlywood;
      color: #fff;
      text-align: center;
      line-height: 90rpx;
  }
