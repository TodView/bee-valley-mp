.rectAudit {
  height: 85vh;
  width: 100%;
  background: gray;
  position: relative;
}

.showMessage {
  width: 100%;
  height: 5vh;
  font-weight: bold;
  display: flex;
  color: red;
  align-items: center;
  justify-content: center;
}

.doSomething {
  width: 100%;
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.doSomething .btn {
  margin: 0 15rpx;
}

.doSomething .btn button {
  height: 7vh;
  line-height: 7vh;
}

.doSomething .timer {
  position: absolute;
  top: 3vh;
  right: 5vw;
  font-size: 3vh;
}

.doSomething .price {
  position: absolute;
  top: 3vh;
  left: 5vw;
  font-size: 3vh;
}