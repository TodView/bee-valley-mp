<!--index.wxml-->
<view class="container">
  <view 
    class="imglab"
  >
    <canvas
      wx:if="{{imgDataArr.length > 0}}" 
      style="width:{{imgWidth}}px;height:{{imgHeight}}px;position:absolute;top:0;left:0;"
      canvas-id="rectTask"
      disable-scroll=true
      bindtouchstart="bindtouchstart"
      bindtouchmove="bindtouchmove"
      bindtouchend="bindtouchend"
      bindtap="bindtap"
      bindlongpress="bindlongpress"
    >
    </canvas>
    <image 
      wx:if="{{imgDataArr.length > 0}}" 
      class="imglab-imgage" 
      style="width:{{imgWidth}}px;height:{{imgHeight}}px" 
      src="{{imgDataArr[0].src}}" 
      bindload="imageLoad"
      data-imgId="{{imgDataArr[0].id}}"
    >
    </image>
  </view>
  <view class="doSomething">
    <view class="btn">
        <button type="primary" bindtap="submitWork" data-imgId="{{imgDataArr[0].id}}">提交</button>
    </view>
    <view class="btn">
        <button type="warn" bindtap="cancelWork" data-imgId="{{imgDataArr[0].id}}">放弃</button>
    </view>
    <icon type="warn" class="icon" bindtap="clickIcon" size="20" data-imgdescription="{{imgDataArr[0].description}}" color="#33CCFF"/>
  </view>
</view>
