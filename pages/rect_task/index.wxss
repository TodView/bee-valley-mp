.imglab {
  height: 85vh;
  width: 100%;
  background: gray;
  position: relative;
}
.imglab image, .imglab canvas{
  width: 100%;
  height: 100%;
}

.imglab canvas{
  position: absolute;
  top: 0;
  left: 0;
}

.showMessage {
  width: 100%;
  height: 5vh;
  font-weight: bold;
  display: flex;
  color: red;
  align-items: center;
  justify-content: space-around;
}

.showMessage .showInfo{
  display: flex;
  align-items: center;
}

.showMessage .showBtn{
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.showMessage .showBtn button{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  padding: 0;
}
.showMessage .showBtn button:first-child{
  margin-right: 10rpx;
}

.doSomething {
  width: 100%;
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.doSomething .btn {
  margin: 0 30rpx;
}

.doSomething .btn button {
  height: 7vh;
  line-height: 7vh;
}

.doSomething .timer {
  position: absolute;
  top: 3vh;
  right: 5vw;
  font-size: 3vh;
}

.doSomething .price {
  position: absolute;
  top: 3vh;
  left: 5vw;
  font-size: 3vh;
}