.wrap{
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.inputPrompt{
    position: relative;
}

.prompt{
    width: 100%;
    overflow: scroll;
    margin-top: 10rpx;
    box-shadow: 0 2px 12px 0 rgba(0,0,0,0.1);
    background: #fff;
    border: 1px solid #e4e7ed;
    max-height: 600rpx;
    position: absolute;
    top: 70rpx;
    left: 0;
    z-index: 100;
    
}

.name{
    width: 30%;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 30rpx;
}

.input{
    background: #f1f1f1;
    font-size: 30rpx;
    width: 70%;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 5rpx;
    text-indent: 10rpx;
}

.prompt_item{
    width: 100%;
    height: 60rpx;
    overflow: hidden;
    /* border-bottom: 1rpx solid black; */
    text-align: center;
    line-height: 60rpx;
}