<view class="table">
  <view class="tr bg-w" style="border-bottom:2px solid black;">
    <view class="th">任务</view>
    <view class="th">已提交/通过/驳回</view>
    <view class="th ">赏金</view>
  </view>
  <block>
    <view class="tr bg-g" wx:for="{{records}}" wx:key="{{index}}">
      <view class="td">{{item.title}}</view>
      <view class="td">{{item.total}}/{{item.approved}}/{{item.rejected}}</view>
      <view class="td">{{item.reward}}</view>
    </view>
  </block>
</view>