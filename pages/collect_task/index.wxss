        .main-content{
            margin-top: 20rpx;
            border-bottom: 20rpx solid #fff;
        }

        .main-content .task_demand{
            padding: 0 6.5%;
        }
        .main-content .task_demand .panel__title{
            font-size: 35rpx;
            color:gray;
            height: 55rpx;
            line-height: 55rpx;
            margin-top: 50rpx;
            margin-bottom: 15rpx;
            position: relative;
        }
        .main-content .task_demand .panel__title::before{
            content: "";
            width: 8rpx;
            height: 55rpx;
            background: #00CC88;
            display: inline-block;
            position: absolute;
            left: -7.5%;
            /* top: -5rpx; */
        }
        .main-content .task_demand .title{
            font-size: 40rpx;
        }
        .main-content .task_demand .content-list{
            font-size: 30rpx;
            color:gray;
            margin-top: 15rpx;
        }
        .main-content .task_demand .content-img{
            width: 100%;
            height: 250rpx;
            background:#F5F5F5	;
            border-radius: 5rpx;
            margin-top: 15rpx;
            text-align: center;
        }
        .main-content .task_demand .content-img .img{
            height: 250rpx;
            width: 70%;
            margin:0 auto;
        }
        /* 图片区域 */

        .user-photo{
            width: 100vw;
            background:	#F5F5F5;
            padding-top:20rpx;}
            .user-photo .user-photo-wrap{
                width: 95vw;
                background: #fff;
                margin: auto;
                border-radius: 10rpx;}
                .user-photo .user-photo-wrap .title{
                    width: 90%;
                    height: 70rpx;
                    padding: 10rpx 4vw;
                    display: flex;
                    align-items: center;}
                    .user-photo .user-photo-wrap .title .font{
                        font-size: 30rpx;
                        margin-left: 20rpx;
                    }
                
                    .user-photo .take-photo .show-item{
                    width: 100%;
                    display: flex;
                    justify-content: space-around;
                    margin-top: 10rpx;
                    flex-wrap: wrap;}
                    .user-photo .take-photo .show-item .img-item{
                        width: 40%;
                        height:270rpx;
                        background:#F5F5F5	;
                        border-radius: 20rpx;
                        color:#00CC88;
                        font-size: 25rpx;
                        margin-top: 20rpx;
                        position: relative;}
                        .user-photo .take-photo .show-item .showIcon{
                            width: 100%;
                            height:270rpx;
                            display: flex;
                            flex-direction: column;
                            justify-content: center;
                            align-items: center;}
                            .user-photo .take-photo .show-item .showIcon .selectImg{
                                position: absolute;
                                color: transparent;
                                width: 100%;
                                height: 270rpx;
                                right: 0;
                                top: 0;
                                opacity: 0;
                            }
                        
                            .user-photo .take-photo .show-item .showImg{
                            width: 100%;
                            height:270rpx;}
                            .user-photo .take-photo .show-item .img{
                                width: 100%;
                                height: 75%;
                                padding: 0;
                                margin-top: 5rpx;
                            }
                            .user-photo .take-photo .show-item .delete{
                                width: 36rpx;
                                height: 36rpx;
                                border-radius: 50%;
                                border: 1rpx solid #00CC88;
                                color: red;
                                font-size: 25rpx;
                                line-height: 38rpx;
                                text-align: center;
                                padding: 0;
                                margin: 0;
                            }
                            .user-photo .take-photo .show-item .delete1{
                                height: 38rpx;
                                width: 100%;
                                font-size: 25rpx;
                                line-height: 38rpx;
                                text-indent: 15rpx;
                                text-align: left;
                                color: red;
                                padding: 0;
                                margin: 0;
                            }
                        
                            .user-photo .take-photo .show-item .eg{
                        width: 40%;
                        height:270rpx;
                        display: flex;
                        flex-direction: column;
                        justify-content: flex-start;
                        align-items: flex-end;
                        flex-wrap: wrap;}
                        .user-photo .take-photo .show-item .eg .eg-item{
                            width: 120rpx;
                            height: 38rpx;
                            font-size: 25rpx;
                            line-height: 38rpx;
                            border-top-right-radius: 20rpx;
                            border-bottom-left-radius: 20rpx;
                            background:#00CC88;
                            text-align: center;
                            color: #fff;
                        }
                        .user-photo .take-photo .show-item .eg .img{
                            width: 100%;
                            height: 75%;
                            padding: 0;
                            margin-top: 5rpx;
                        }
                    
                        .user-photo .info{
                    width: 90%;
                    height: 50rpx;
                    background: #F5F5F5	;
                    margin:30rpx auto 0;
                    font-size: 23rpx;
                    line-height: 50rpx;
                    text-indent: 10rpx;
                    border-radius: 5rpx;
                    color: gray;
                    position: relative;
                }
                
                .user-photo  .info:before{
                    position: absolute;
                    content: "";
                    width: 0;
                    height: 0;
                    left: 100rpx;
                    top: -20rpx;
                    border-left: 15rpx solid #F5F5F5;
                    border-top: 15rpx solid transparent;
                    border-bottom: 15rpx solid transparent;
                    transform: rotate(-90deg);
                }
                .user-photo .cenggao{
                    width: 100%;
                    height: 30rpx;
                }
            
        

        /* 固定定位 */

        .top{
            position: fixed;
            top: 0rpx;
            left: 0;
            width: 100vw;
            height: 20rpx;
            background: #fff;
        }
        .top .top-info{
            width: 90%;
            height: 20rpx;
            border-radius: 10rpx;
            color: #00CC88;
            background:rgba(127,255,170,0.5);
            text-align: center;
            line-height: 20rpx;
            font-size: 18rpx;
            margin: 0 auto;
        }
        
        .bottom-btn{
            position: fixed;
            bottom: 0rpx;
            width: 100%;
            height: 10vh;
            border-top: 5rpx solid #F5F5F5;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #fff;
        }
        .bottom-btn .btn{
            width: 90vw;
            height: 7vh;
            line-height: 7vh;
            outline: none;
            border: none;
            background: -o-linear-gradient(top,  rgba(127,255,170,0.5) 100%,#00CC88 100%);
            background: -webkit-gradient(linear, left top, left bottom, color-stop(100%,rgba(127,255,170,0.5)), color-stop(100%,	#00CC88)); 
            background: linear-gradient(to left, rgba(127,255,170,0.5) ,#00CC88);
            /* background: red; */
            color: #fff;
            border-radius: 3.5vh;
        }
        
        .cengHeight{
            width: 100%;
            height: 10vh
        }

        .camera{
            width: 100vw;
            height:100vh;
            background: gray;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
        }

        .camera button{
            width: 80%;
            height: 10vh;
            line-height: 10vh;
            margin: auto;
        }
